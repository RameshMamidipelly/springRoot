  <!-- 4 way to configure setter>D.I -> using inner beans -->
 <beans>
	<bean id="car" class="bean.Car">
		<constructor-arg index="1">
			<bean class="bean.Engine">
				<constructor-arg type="int">
					<list>
						<value>123</value>
						<value>456</value>
					</list>
				</constructor-arg>
				<constructor-arg type="String">
					<list>
						<value>SINLG</value>
						<value>DOUBLE</value>
					</list>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg type="String">
		<list>
		<value>ramesh</value>
		<value>rammi</value>
		</list>
		</constructor-arg>
	</bean>
</beans>